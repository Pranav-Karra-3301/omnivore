# Omnivore Environment Configuration
# Copy this file to .env and adjust the values as needed

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://omnivore:your_secure_password_here@localhost:5432/omnivore

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
RUST_LOG=info
OMNIVORE_DATA_DIR=./data

# API Configuration
API_HOST=0.0.0.0
API_PORT=3000

# Browser Automation (optional)
SELENIUM_URL=http://localhost:4444

# Security (for production)
JWT_SECRET=your_jwt_secret_here
API_KEY_SALT=your_api_key_salt_here

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
DEFAULT_RATE_LIMIT=100
BURST_RATE_LIMIT=1000

# Worker Configuration
MAX_CONCURRENT_CRAWLS=10
DEFAULT_CRAWL_TIMEOUT_SECONDS=300

# Storage Configuration
MAX_PAGE_SIZE_MB=10
COMPRESSION_ENABLED=true
