{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd docs-site && npm ci --no-audit --no-fund && npm run build",
  "installCommand": "echo Using buildCommand for install step",
  "outputDirectory": "docs-site/out",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        { "key": "cache-control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "cache-control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
